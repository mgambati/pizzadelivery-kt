<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" prefHeight="593.0"
            prefWidth="250.0" fx:controller="controller.MenuController" styleClass="main-menu-pane"
            stylesheets="@../styles/menu.css" BorderPane.alignment="CENTER">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane prefHeight="125.0" prefWidth="250.0">
                    <children>
                        <Label alignment="CENTER" layoutX="111.0" layoutY="54.0" prefHeight="125.0" prefWidth="250.0"
                               styleClass="main-menu-logo" text="Pizza Delivery" textAlignment="RIGHT"
