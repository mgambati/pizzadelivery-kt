                <Button fx:id="buttonOrders" mnemonicParsing="false" onAction="#switchToOrders" prefHeight="45.0"
                        prefWidth="250.0" styleClass="main-menu-item" text="Vendas"/>
                <Button fx:id="buttonProducts" mnemonicParsing="false" onAction="#switchToProducts" prefHeight="45.0"
